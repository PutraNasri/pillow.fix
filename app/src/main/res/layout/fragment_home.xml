<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:id="@+id/scrollView">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button1"
                android:text="Syiah Kuala"
                style="@android:style/ButtonBar"
                android:background="@drawable/syiahkuala"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:onClick="onClick"
                android:textAlignment="center"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button2"
                android:text="Kuta Raja"
                style="@android:style/ButtonBar"
                android:background="@drawable/kutaraja"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button3"
                android:text="Ule Kareng"
                style="@android:style/ButtonBar"
                android:background="@drawable/ulekareng"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button4"
                android:text="lueng bata"
                style="@android:style/ButtonBar"
                android:background="@drawable/lhoengbata"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button5"
                android:text="meuraxa"
                style="@android:style/ButtonBar"
                android:background="@drawable/meraxa"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button6"
                android:text="Kuta Alam"
                style="@android:style/ButtonBar"
                android:background="@drawable/kutaalam"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button7"
                android:text="jaya baru"
                style="@android:style/ButtonBar"
                android:background="@drawable/jayabaru"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button8"
                android:text="banda raya"
                style="@android:style/ButtonBar"
                android:background="@drawable/bandaraya"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClick"
                android:textStyle="bold" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>
