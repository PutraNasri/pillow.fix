<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.detail_syahkuala"
    android:background="#ededed">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:id="@+id/image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/semple"
                android:scaleType="fitXY" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#3F51B5"
                android:id="@+id/frameLayout">
                <TextView
                    android:layout_width="307dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextnamakost"
                    android:layout_below="@+id/image"
                    android:textColor="#ffffff"
                    android:textStyle="bold|italic"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:text="CEMPAKA" />


                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton"
                    android:background="@drawable/ovall"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:onClick="maps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemilik"
                    android:id="@+id/editTextid"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:id="@+id/textView10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|bottom"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextnamapemilik"
                    android:textSize="15dp"
                    android:layout_below="@+id/editTextnamakost"
                    android:layout_toLeftOf="@+id/imageButton"
                    android:layout_toRightOf="@+id/editTextid"
                    android:layout_toEndOf="@+id/editTextid"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="byonge"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextharga"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="right|bottom"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#f7f0f0"
                    android:layout_marginBottom="2dp"
                    android:text="RP 2000000 / bulan" />
            </FrameLayout>





            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView1"
                android:layout_alignLeft="@+id/frameLayout"
                android:layout_alignStart="@+id/frameLayout"
                android:layout_above="@+id/editTextnohp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/frameLayout">
                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/editTextalamat"
                        android:layout_above="@+id/frameLayout"
                        android:layout_alignLeft="@+id/button10"
                        android:layout_alignStart="@+id/button10"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="Deskripsi"
                        android:id="@+id/textView12"
                        android:layout_below="@+id/frameLayout"

                        android:textColor="#212121"
                        android:textSize="30dp"
                        android:textAlignment="center" />



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextdeskripsi"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#212121"
                        android:layout_gravity="right"
                        android:text="" />


                </LinearLayout>
            </ScrollView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextnohp"

                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_above="@+id/button10"
                android:layout_alignRight="@+id/button11"
                android:layout_alignEnd="@+id/button11"
                android:text="085260243138"
                android:background="#699af4" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="message"
                    android:id="@+id/button11"
                    android:backgroundTint="#4a5bb8"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right|center_vertical" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:id="@+id/button10"
                    android:backgroundTint="#33ed5b"
                    android:layout_alignTop="@+id/button11"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|center_vertical" />
            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
