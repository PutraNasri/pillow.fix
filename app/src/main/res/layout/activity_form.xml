<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".isiform.form">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nama Kost"
                android:id="@+id/textView3"
                android:textSize="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextnamakost"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:background="#bbbdf0"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nama Pemilik"
                android:id="@+id/textView4"
                android:textSize="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextnamapemilik"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:background="#bbbdf0"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Pemilik"
                android:id="@+id/textView5"
                android:textSize="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextnohp"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#bbbdf0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NIK Pemilik"
                android:id="@+id/textView6"
                android:textSize="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextnik"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:background="#bbbdf0"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Alamat"
                android:id="@+id/textView7"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextalamat"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:background="#bbbdf0"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="jalan" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/spinnerdaerah"
                android:background="#bbbdf0"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Harga Sewa"
                android:id="@+id/textView8"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/editTextharga"
                android:textStyle="bold|italic"
                android:textAlignment="inherit"
                android:background="#bbbdf0"
                android:hyphenationFrequency="normal"
                android:textColorHint="#ffffff"
                android:textIsSelectable="false"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/spinnerper"
                android:background="#bbbdf0"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:entries="@array/perr" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Deskripsi Kost"
                android:id="@+id/textView"
                android:textSize="15dp" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/editTextdeskripsi"
                android:layout_gravity="center_horizontal"
                android:background="#bbbdf0"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Ambil Lokasi"
                    android:id="@+id/button9"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#91dfa7"
                    android:onClick="coklokasi" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ambil Foto"
                    android:id="@+id/cokfoto"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#90d2df"
                    android:onClick="cokfotoile" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/editTextlokasiLAT"
                    android:layout_weight="1.20" />
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/editTextlokasLONG"
                    />
            </LinearLayout>



            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/imageViewfoto"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#edcccc" />

            <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:backgroundTint="#6ba7ec" />
    </LinearLayout>

    </ScrollView>
</RelativeLayout>